<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LecturerLogin"
    android:background="#475764">

    <TextView android:text="Lecturer Login" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:textColor="#af9b69"
        android:id="@+id/txtLecturerLogin"
        android:textIsSelectable="false"
        android:layout_alignWithParentIfMissing="false"
        android:textAlignment="center"
        android:layout_below="@+id/imageViewNRCLogo"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/imageViewNRCLogo"
        android:src="@drawable/nrc_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtEditEmail"
        android:background="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:editable="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtEditPassword"
        android:background="#ffffff"
        android:editable="true"
        android:password="false"
        android:typeface="normal"
        android:visibility="visible"
        android:layout_below="@+id/txtEnterPassword"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btnLogin"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/txtEditPassword"
        android:layout_alignRight="@+id/txtEnterPassword"
        android:layout_alignEnd="@+id/txtEnterPassword"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please enter your login email"
        android:id="@+id/textView"
        android:layout_above="@+id/txtEditEmail"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please enter your password."
        android:id="@+id/txtEnterPassword"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtEditEmail"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="If you have forgotten your sign-in details, you should contact the network administrator for help!"
        android:id="@+id/txtiewLoginError"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:textColor="#ff0505"
        android:textSize="30dp"
        android:visibility="invisible" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.example.michaekgrundie.rollcallnrc.ClassStudents"
    tools:showIn="@layout/activity_class_students"
    android:background="#475764">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/imageView"
        android:src="@drawable/nrc_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Class Name"
        android:id="@+id/txtClassName"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Class Code"
        android:id="@+id/txtClassCode"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtClassName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Start/Finish Time"
        android:id="@+id/txtClassTimes"
        android:layout_below="@+id/txtClassCode"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerStudentList"
        android:layout_below="@+id/txtClassTimes"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add Student"
        android:id="@+id/btnAddStudent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Remove Student"
        android:id="@+id/btnRemoveStudent"
        android:layout_alignBottom="@+id/btnAddStudent"
        android:layout_alignRight="@+id/spinnerStudentList"
        android:layout_alignEnd="@+id/spinnerStudentList" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="View"
        android:id="@+id/btnView"
        android:layout_alignTop="@+id/btnAddStudent"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btnSubmit"
        android:layout_alignTop="@+id/btnRemoveStudent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTxtName"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:hint="Enter Student's Name"
        android:visibility="invisible" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextStuNo"
        android:background="#ffffff"
        android:hint="Enter Student Number"
        android:visibility="invisible"
        android:layout_below="@+id/editTxtName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPhoneNo"
        android:background="#ffffff"
        android:hint="Enter Student Phone Number"
        android:visibility="invisible"
        android:layout_below="@+id/editTextStuNo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtStudentName"
        android:layout_below="@+id/editTextPhoneNo"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:visibility="invisible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtStudentNo"
        android:background="#ffffff"
        android:layout_below="@+id/txtStudentName"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtStudentTel"
        android:background="#ffffff"
        android:layout_below="@+id/txtStudentNo"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>
